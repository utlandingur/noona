datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  email     String    @unique
  companyId String
  token     UserToken
  scopes    String[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now())

  @@map("users")
}

type UserToken {
  accessToken  String
  refreshToken String
  expiresAt    DateTime
}
